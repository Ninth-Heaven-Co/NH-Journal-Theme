{{!< default}}

<main id="gh-main" class="gh-main gh-canvas">
    {{#tag}}
        <section class="grid gap-12 py-16 md:grid-cols-[250px_1fr]">
            <div class="flex flex-col items-start text-[var(--color-primary-text)]">
                <div class="mb-3 text-xs uppercase tracking-[0.2em] text-neutral-500">Topic</div>
                <h1 class="mb-4 font-serif text-4xl font-semibold">{{name}}</h1>
                <p class="text-base leading-relaxed text-neutral-700">
                    {{#if description}}
                        {{description}}
                    {{else}}
                        A collection of {{plural ../pagination.total empty="0 issues" singular="% issue" plural="% issues"}}
                    {{/if}}
                </p>
            </div>

            <div class="space-y-12">
                {{#foreach posts}}
                    {{> loop}}
                {{/foreach}}
            </div>
        </section>
    {{/tag}}

    <button class="gh-loadmore gh-btn">Load more issues</button>
</main>