<article class="loop-horizontal fade-in {{post_class}}">
    <div class="post-image">
        {{#if feature_image}}
            <a href="{{url}}">
                <img
                    src="{{img_url feature_image size="m"}}"
                    srcset="{{img_url feature_image size="s"}} 400w, {{img_url feature_image size="m"}} 720w, {{img_url feature_image size="l"}} 960w"
                    sizes="(min-width: 1280px) 320px, (min-width: 768px) 280px, 100vw"
                    alt="{{title}}"
                    loading="lazy"
                >
            </a>
        {{else}}
            <div class="post-image-placeholder" aria-hidden="true"></div>
        {{/if}}
    </div>

    <div class="post-content">
        <h2 class="post-title"><a href="{{url}}">{{title}}</a></h2>

        <p class="post-excerpt">{{excerpt words="30"}}</p>

        <span class="post-meta">
            <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD MMM YYYY"}}</time>
            {{#if reading_time}}
                <span aria-hidden="true"> Â· </span>
                <span>{{reading_time}}</span>
            {{/if}}
        </span>
    </div>
</article>
