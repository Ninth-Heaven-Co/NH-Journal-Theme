<article class="group {{post_class}} flex flex-col gap-8 border-t border-neutral-200 pt-8 md:flex-row md:gap-10">
    {{#if feature_image}}
        <a href="{{url}}" class="md:w-1/3 overflow-hidden rounded-sm">
            <img
                src="{{img_url feature_image size="m"}}"
                srcset="{{img_url feature_image size="s"}} 400w, {{img_url feature_image size="m"}} 720w, {{img_url feature_image size="l"}} 960w"
                sizes="(min-width: 1200px) 320px, (min-width: 768px) 280px, 100vw"
                alt="{{title}}"
                loading="lazy"
                class="h-full w-full rounded-sm object-cover transition duration-500 group-hover:scale-[1.02]"
            >
        </a>
    {{/if}}

    <div class="w-full {{#if feature_image}}md:w-2/3{{/if}}">
        {{#if primary_tag}}
            <div class="mb-3 text-xs uppercase tracking-[0.2em] text-neutral-500">{{primary_tag.name}}</div>
        {{/if}}

        <h2 class="mb-3 font-serif text-3xl font-semibold leading-tight">
            <a href="{{url}}" class="transition hover:opacity-80">{{title}}</a>
        </h2>

        <p class="mb-4 text-base leading-relaxed text-neutral-700 md:text-lg">{{excerpt words="25"}}</p>

        <div class="text-xs uppercase tracking-[0.16em] text-neutral-500">
            <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD MMM YYYY"}}</time>{{#if reading_time}} â€¢ {{reading_time}}{{/if}}
        </div>
    </div>
</article>
