{{!< default}}

<main id="gh-main" class="gh-main gh-canvas">
    {{#author}}
        <header class="author-header fade-in">
            {{#if profile_image}}
                <img class="author-profile-image" src="{{img_url profile_image size="m"}}" alt="{{name}}">
            {{else}}
                <span class="author-profile-image author-profile-placeholder" aria-hidden="true">{{> icons/avatar}}</span>
            {{/if}}

            <div class="author-info">
                <h1 class="author-name">{{name}}</h1>

                {{#if bio}}
                    <p class="author-bio">{{bio}}</p>
                {{/if}}

                <div class="author-meta">
                    {{#if location}}
                        <span class="author-location">{{location}}</span>
                    {{/if}}
                    {{#if website}}
                        <a class="author-website" href="{{website}}" target="_blank" rel="noopener">{{website}}</a>
                    {{/if}}

                    {{#if twitter}}
                        <a class="author-social" href="{{social_url type="twitter"}}" target="_blank" rel="noopener">Twitter</a>
                    {{/if}}
                    {{#if facebook}}
                        <a class="author-social" href="{{social_url type="facebook"}}" target="_blank" rel="noopener">Facebook</a>
                    {{/if}}
                    {{#if instagram}}
                        <a class="author-social" href="{{social_url type="instagram"}}" target="_blank" rel="noopener">Instagram</a>
                    {{/if}}
                    {{#if linkedin}}
                        <a class="author-social" href="{{social_url type="linkedin"}}" target="_blank" rel="noopener">LinkedIn</a>
                    {{/if}}
                    {{#if bluesky}}
                        <a class="author-social" href="{{social_url type="bluesky"}}" target="_blank" rel="noopener">Bluesky</a>
                    {{/if}}
                    {{#if mastodon}}
                        <a class="author-social" href="{{social_url type="mastodon"}}" target="_blank" rel="noopener">Mastodon</a>
                    {{/if}}
                    {{#if threads}}
                        <a class="author-social" href="{{social_url type="threads"}}" target="_blank" rel="noopener">Threads</a>
                    {{/if}}
                    {{#if tiktok}}
                        <a class="author-social" href="{{social_url type="tiktok"}}" target="_blank" rel="noopener">TikTok</a>
                    {{/if}}
                    {{#if youtube}}
                        <a class="author-social" href="{{social_url type="youtube"}}" target="_blank" rel="noopener">YouTube</a>
                    {{/if}}
                </div>
            </div>
        </header>
    {{/author}}

    <section class="author-posts post-list">
        {{#foreach posts}}
            <article class="post-card fade-in {{post_class}}">
                {{#if feature_image}}
                    <a href="{{url}}" class="post-card-image-link">
                        <img
                            class="post-card-image"
                            src="{{img_url feature_image size="m"}}"
                            srcset="{{img_url feature_image size="s"}} 400w, {{img_url feature_image size="m"}} 720w, {{img_url feature_image size="l"}} 960w"
                            sizes="(min-width: 768px) 200px, 100vw"
                            alt="{{title}}"
                            loading="lazy"
                        >
                    </a>
                {{else}}
                    <div class="post-card-image post-card-image--placeholder" aria-hidden="true"></div>
                {{/if}}

                <div class="post-card-content">
                    <h2 class="post-card-title"><a href="{{url}}">{{title}}</a></h2>

                    {{#if excerpt}}
                        <p class="post-card-excerpt">{{excerpt words="25"}}</p>
                    {{/if}}

                    <div class="post-card-meta">
                        <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD MMM YYYY"}}</time>
                        {{#if reading_time}}
                            <span aria-hidden="true"> Â· </span>
                            <span>{{reading_time}}</span>
                        {{/if}}
                    </div>
                </div>
            </article>
        {{/foreach}}
    </section>

    <button class="gh-loadmore gh-btn">Load more issues</button>
</main>