{{!< default}}

<main id="gh-main" class="gh-main gh-canvas">
    <div class="archive-layout">
        <div class="archive-main">
            <section class="post-list">
                {{#foreach posts}}
                    {{> "loop-horizontal-no-badge"}}
                {{/foreach}}
            </section>

            <button class="gh-loadmore gh-btn">Load more issues</button>
        </div>

        <aside class="archive-sidebar fade-in">
            {{#author}}
                {{#if profile_image}}
                    <img class="sidebar-avatar" src="{{img_url profile_image size="m"}}" alt="{{name}}">
                {{else}}
                    <span class="sidebar-avatar sidebar-avatar--placeholder" aria-hidden="true">{{> icons/avatar}}</span>
                {{/if}}

                <h1 class="sidebar-title">{{name}}</h1>

                {{#if bio}}
                    <p class="sidebar-description">{{bio}}</p>
                {{/if}}

                <div class="sidebar-links">
                    {{#if location}}
                        <span class="sidebar-link-item">{{location}}</span>
                    {{/if}}
                    {{#if website}}
                        <a class="sidebar-link-item" href="{{website}}" target="_blank" rel="noopener">{{website}}</a>
                    {{/if}}

                    {{#if twitter}}
                        <a class="sidebar-link-item" href="{{social_url type="twitter"}}" target="_blank" rel="noopener">Twitter</a>
                    {{/if}}
                    {{#if facebook}}
                        <a class="sidebar-link-item" href="{{social_url type="facebook"}}" target="_blank" rel="noopener">Facebook</a>
                    {{/if}}
                    {{#if instagram}}
                        <a class="sidebar-link-item" href="{{social_url type="instagram"}}" target="_blank" rel="noopener">Instagram</a>
                    {{/if}}
                    {{#if linkedin}}
                        <a class="sidebar-link-item" href="{{social_url type="linkedin"}}" target="_blank" rel="noopener">LinkedIn</a>
                    {{/if}}
                    {{#if bluesky}}
                        <a class="sidebar-link-item" href="{{social_url type="bluesky"}}" target="_blank" rel="noopener">Bluesky</a>
                    {{/if}}
                    {{#if mastodon}}
                        <a class="sidebar-link-item" href="{{social_url type="mastodon"}}" target="_blank" rel="noopener">Mastodon</a>
                    {{/if}}
                    {{#if threads}}
                        <a class="sidebar-link-item" href="{{social_url type="threads"}}" target="_blank" rel="noopener">Threads</a>
                    {{/if}}
                    {{#if tiktok}}
                        <a class="sidebar-link-item" href="{{social_url type="tiktok"}}" target="_blank" rel="noopener">TikTok</a>
                    {{/if}}
                    {{#if youtube}}
                        <a class="sidebar-link-item" href="{{social_url type="youtube"}}" target="_blank" rel="noopener">YouTube</a>
                    {{/if}}
                </div>
            {{/author}}
        </aside>
    </div>
</main>
